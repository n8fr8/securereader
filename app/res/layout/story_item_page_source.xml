<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tlSource"
    android:layout_width="match_parent"
    android:layout_height="@dimen/source_height"
    android:layout_gravity="left" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_filter_logo_placeholder" />

        <info.guardianproject.securereaderinterface.widgets.UpdatingTextView
            android:id="@+id/tvTime"
            style="@style/ItemTimeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="0"
            android:gravity="right|center_vertical"
            android:paddingLeft="4dp"
            android:text="@string/story_item_short_time" />

        <TextView
            android:id="@+id/tvSource"
            style="@style/ItemSourceStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:layout_toLeftOf="@id/tvTime"
            android:layout_toRightOf="@+id/imageView1"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:padding="4dp"
            android:text="@string/story_item_short_source"
            android:textAllCaps="true" />

        <View android:background="#e8e9ea"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true" 
             />
            
</RelativeLayout>

